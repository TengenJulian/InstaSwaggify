<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/export_dialog"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/export_dialog_text" />

    <SeekBar
        android:id="@+id/picture_quality"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    </SeekBar>

    <Spinner
        android:id="@+id/picture_compression"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:entries="@array/compression"
        android:prompt="@string/compression_prompt" />

</LinearLayout>