<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/background">

    <ImageView
        android:id="@+id/list_item_filter_drag_handle"
        android:background="@drawable/drag"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saturation Filter (placeholder)"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_item_filter_label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/list_item_filter_title"
                android:layout_toRightOf="@+id/list_item_filter_drag_handle"
                android:text="Small Text"/>

            <SeekBar
                android:id="@+id/list_item_filter_seekbar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item_filter_title"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/list_item_filter_label1"/>

        </LinearLayout>

            <TextView
                android:id="@+id/list_item_filter_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/list_item_filter_label1"
                android:layout_toRightOf="@+id/list_item_filter_drag_handle"
                android:text="Small Text"/>

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list_item_filter_seekbar2"
                android:layout_below="@+id/list_item_filter_seekbar1"
                android:layout_alignLeft="@+id/list_item_filter_seekbar1"
                android:layout_alignEnd="@+id/list_item_filter_seekbar1"/>
    </LinearLayout>
</LinearLayout>