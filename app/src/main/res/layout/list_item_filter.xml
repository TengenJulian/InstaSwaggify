<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800dp"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@color/background">

    <ImageView
        android:id="@+id/list_item_filter_drag_handle"
        android:background="@drawable/drag"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/list_item_filter_title"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:text="Saturation Filter (placeholder)"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_item_filter_label1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/list_item_filter_title"
                android:layout_toRightOf="@+id/list_item_filter_drag_handle"
                android:text="value etc."/>

            <SeekBar
                android:id="@+id/list_item_filter_seekbar1"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/list_item_filter_title"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/list_item_filter_label1"
                android:layout_centerVertical="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_item_filter_label2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/list_item_filter_title"
                android:layout_toRightOf="@+id/list_item_filter_drag_handle"
                android:text="value etc."/>

            <SeekBar
                android:id="@+id/list_item_filter_seekbar2"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/list_item_filter_title"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/list_item_filter_label1"
                android:layout_centerVertical="true"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>