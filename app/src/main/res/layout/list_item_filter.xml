<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:id="@+id/list_item_filter_switch"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FilterName"
        android:id="@+id/list_item_filter_title"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/list_item_filter_switch"
        android:layout_toRightOf="@+id/list_item_filter_switch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_filter_seekbar1"
        android:layout_below="@+id/list_item_filter_switch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/list_item_filter_switch"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_filter_seekbar2"
        android:layout_below="@+id/list_item_filter_seekbar1"
        android:layout_alignLeft="@+id/list_item_filter_seekbar1"
        android:layout_alignStart="@+id/list_item_filter_seekbar1"
        android:layout_alignRight="@+id/list_item_filter_seekbar1"
        android:layout_alignEnd="@+id/list_item_filter_seekbar1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/list_item_filter_label1"
        android:layout_below="@+id/list_item_filter_switch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/list_item_filter_seekbar2"
        android:layout_toLeftOf="@+id/list_item_filter_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/list_item_filter_label2"
        android:layout_alignTop="@+id/list_item_filter_seekbar2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/list_item_filter_seekbar1"
        android:layout_alignBottom="@+id/list_item_filter_seekbar2"/>

</RelativeLayout>